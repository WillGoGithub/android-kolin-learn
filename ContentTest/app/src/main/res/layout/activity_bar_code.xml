<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BarCodeActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:text="Go 1" android:onClick="btnF1"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="Go 2" android:onClick="btnF2"/>
        <Button android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="Page 2" android:onClick="goPage2Btn"/>
    </LinearLayout>

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/container"></FrameLayout>
</LinearLayout>